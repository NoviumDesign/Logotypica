/[if !IE]>
%html{lang: 'en', class: 'no-js'}
  /<![endif]
  %head
    %title #{data.page.title || "Logotyp och grafiska element av Logotypica"}
    %meta(http-equiv="content-type" content="text/html" charset="utf-8")
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    %meta{:content => "Logotypica skapar olika grafiska element. Läs om detaljer som hjälper kunder att välja ett varumärke; logotyp, piktogram, märken, mönster mm.", :name => "description"}
    %meta{:content => "Logotyp,Logotypica", :name => "keywords"}
    %meta(name="author" content="")
    
    -# Standard viewport tag to set the viewport to the device's width, 
    -# Android 2.3 devices need this so 100% width works properly and 
    -# doesn't allow children to blow up the viewport width
    %meta{content: "initial-scale=1.0,user-scalable=no,maximum-scale=1,width=device-width", name: "viewport"}
    
    -# Fix for iPhone 5 fullscreen web apps
    %meta(name="viewport" content="initial-scale=1.0,user-scalable=no,maximum-scale=1" media="(device-height: 568px)")
    %meta(name='apple-mobile-web-app-capable' content='yes')
    %meta(name='apple-mobile-web-app-status-bar-style' content='translucent-black')
    
    -# Stylesheets
    = stylesheet_link_tag 'application'
  %body{class: current_page.data.body_class || 'page'}
    = yield
    -# Javascripts
    = javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/modernizr/2.6.2/modernizr.min.js'
    = javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/jquery/1.8.3/jquery.min.js'
    = javascript_include_tag 'application'

